{
	"name": "CopyCast",
	"description": "Beam all content on your browser to the chromecast",
	"version": "1.0.0",
	"author": "Evin Ugur (http://github.com/evinugur)",
	"permissions": [ 
		"webRequest",
		"webRequestBlocking",
		"webNavigation",
		"tabs",
		"<all_urls>"
	],
	"background" : { 
		"scripts" : ["request_listener.js"],
		"persistent": true
	},
	"content_scripts" : [ 
		{
			"matches" : ["<all_urls>"],
			"js" : ["content.js"]
		}
	],
	"browser_action" : {
		"default_title" : "CopyCast",
		"default_popup" : "copycast.html"
	},
	"manifest_version": 2 
}
 